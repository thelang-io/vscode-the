// SYNTAX TEST "source.the"

if true {}
// <---------- meta.if.the
// <-- keyword.control.conditional.the
// ^^^^ constant.language.boolean.true.the
//      ^^ meta.block.the

if 1 > 2 {}
// <----------- meta.if.the
// <-- keyword.control.conditional.the
// ^ constant.numeric.the
//   ^ keyword.operator.relational.the
//     ^ constant.numeric.the
//       ^^ meta.block.the

if i < 10 { test() }
// <-------------------- meta.if.the
// <-- keyword.control.conditional.the
// ^ variable.other.the
//   ^ keyword.operator.relational.the
//     ^^ constant.numeric.the
//        ^^^^^^^^^^ meta.block.the

if i < 10 {
// <----------- meta.if.the
// <-- keyword.control.conditional.the
// ^ variable.other.the
//   ^ keyword.operator.relational.the
//     ^^ constant.numeric.the
//        ^ meta.block.the
  test()
// <-------- meta.if.the meta.block.the
}
// <- meta.if.the meta.block.the

if (i < 10) { test() }
// <-------------------- meta.if.the
// <-- keyword.control.conditional.the
// ^ meta.brace.round.the
//  ^ variable.other.the
//    ^ keyword.operator.relational.the
//      ^^ constant.numeric.the
//        ^ meta.brace.round.the
//          ^^^^^^^^^^ meta.block.the

if i < 10 {
// <----------- meta.if.the
  if j > 2 {}
// <~~----------- meta.if.the meta.if.the
}
// <- meta.if.the

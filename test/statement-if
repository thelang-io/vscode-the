// SYNTAX TEST "source.the"

if true {}
// <---------- meta.if.the
// <-- keyword.control.conditional.the
// ^^^^ constant.language.boolean.true.the
//      ^^ meta.block.the

if 1 > 2 {}
// <----------- meta.if.the
// <-- keyword.control.conditional.the
// ^ constant.numeric.the
//   ^ keyword.operator.relational.the
//     ^ constant.numeric.the
//       ^^ meta.block.the

if i < 10 { test() }
// <-------------------- meta.if.the
// <-- keyword.control.conditional.the
// ^ variable.other.readwrite.the
//   ^ keyword.operator.relational.the
//     ^^ constant.numeric.the
//        ^^^^^^^^^^ meta.block.the

if i < 10 {
// <----------- meta.if.the
// <-- keyword.control.conditional.the
// ^ variable.other.readwrite.the
//   ^ keyword.operator.relational.the
//     ^^ constant.numeric.the
//        ^ meta.block.the
  test()
// <-------- meta.if.the meta.block.the
}
// <- meta.if.the meta.block.the

if (i < 10) { test() }
// <-------------------- meta.if.the
// <-- keyword.control.conditional.the
// ^ meta.brace.round.the
//  ^ variable.other.readwrite.the
//    ^ keyword.operator.relational.the
//      ^^ constant.numeric.the
//        ^ meta.brace.round.the
//          ^^^^^^^^^^ meta.block.the

if i < 10 {
// <----------- meta.if.the
  if j > 2 {}
// <~~----------- meta.if.the meta.if.the
}
// <- meta.if.the

if i < 10 {
// <----------- meta.if.the
  test1()
// <--------- meta.if.the
} elif i > 10 {
// <- meta.if.the
// <~~------------- meta.elif.the
  test2()
// <--------- meta.elif.the
} else {
// <- meta.elif.the
// <~~------ meta.else.the
// <~~---- keyword.control.conditional.the
  test3()
// <--------- meta.else.the
}
// <- meta.else.the

if (true) {}
// <------------ meta.if.the
// <-- keyword.control.conditional.the
// ^ meta.brace.round.the
//  ^^^^ constant.language.boolean.true.the
//      ^ meta.brace.round.the
//        ^^ meta.block.the

if (
// <---- meta.if.the
// <-- keyword.control.conditional.the
// ^ meta.brace.round.the
  true
// <---------- meta.if.the
// <~~---- constant.language.boolean.true.the
) {}
// <---- meta.if.the
// <- meta.brace.round.the
// <~~-- meta.block.the

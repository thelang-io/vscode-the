// SYNTAX TEST "source.the"

test := 10
// <---------- meta.var.expr.the
// <---- meta.definition.variable.the variable.other.the
//   ^^ keyword.operator.assignment.the
//      ^^ constant.numeric.the

test: str
// <--------- meta.var.expr.the
// <---- meta.definition.variable.the variable.other.the
//  ^^^^^ meta.type.annotation.the

test: i64 = 10
// <-------------- meta.var.expr.the
// <---- meta.definition.variable.the variable.other.the
//  ^^^^^ meta.type.annotation.the
//        ^ keyword.operator.assignment.the
//          ^^ constant.numeric.the

mut test := 10
// <-------------- meta.var.expr.the
// <--- storage.modifier.the
//  ^^^^ meta.definition.variable.the variable.other.the
//       ^^ keyword.operator.assignment.the
//          ^^ constant.numeric.the

mut test: str
// <------------- meta.var.expr.the
// <--- storage.modifier.the
//  ^^^^ meta.definition.variable.the variable.other.the
//      ^^^^^ meta.type.annotation.the

mut test: i64 = 10
// <------------------ meta.var.expr.the
// <--- storage.modifier.the
//  ^^^^ meta.definition.variable.the variable.other.the
//      ^^^^^ meta.type.annotation.the
//            ^ keyword.operator.assignment.the
//              ^^ constant.numeric.the

// SYNTAX TEST "source.the"

loop {}
// <------- meta.loop.the
// <---- keyword.control.loop.the
//   ^ punctuation.definition.block.the
//    ^ punctuation.definition.block.the

loop true {}
// <------------ meta.loop.the
// <---- keyword.control.loop.the
//   ^^^^ constant.language.boolean.true.the
//        ^ punctuation.definition.block.the
//         ^ punctuation.definition.block.the

loop i < 10 {}
// <-------------- meta.loop.the
// <---- keyword.control.loop.the
//   ^ variable.other.the
//     ^ keyword.operator.relational.the
//       ^^ constant.numeric.the
//          ^ punctuation.definition.block.the
//           ^ punctuation.definition.block.the

loop mut i := 0; i < 10; i++ {}
// <------------------------------- meta.loop.the
// <---- keyword.control.loop.the
//   ^^^^^^^^^^ meta.var.expr.the
//             ^ punctuation.terminator.statement.the
//               ^ variable.other.the
//                 ^ keyword.operator.relational.the
//                   ^^ constant.numeric.the
//                     ^ punctuation.terminator.statement.the
//                       ^ variable.other.the
//                        ^^ keyword.operator.increment.the
//                           ^ punctuation.definition.block.the
//                            ^ punctuation.definition.block.the

loop ; j < 10; j++ {}
// <--------------------- meta.loop.the
// <---- keyword.control.loop.the
//   ^ punctuation.terminator.statement.the
//     ^ variable.other.the
//       ^ keyword.operator.relational.the
//         ^^ constant.numeric.the
//           ^ punctuation.terminator.statement.the
//             ^ variable.other.the
//              ^^ keyword.operator.increment.the
//                 ^ punctuation.definition.block.the
//                  ^ punctuation.definition.block.the


loop ; k < 10; {}
// <----------------- meta.loop.the
// <---- keyword.control.loop.the
//   ^ punctuation.terminator.statement.the
//     ^ variable.other.the
//       ^ keyword.operator.relational.the
//         ^^ constant.numeric.the
//           ^ punctuation.terminator.statement.the
//             ^ punctuation.definition.block.the
//              ^ punctuation.definition.block.the

loop mut i := 0; i < 10; i++ { test(i) }
// <---------------------------------------- meta.loop.the
// <---- keyword.control.loop.the
//   ^^^^^^^^^^ meta.var.expr.the
//             ^ punctuation.terminator.statement.the
//               ^ variable.other.the
//                 ^ keyword.operator.relational.the
//                   ^^ constant.numeric.the
//                     ^ punctuation.terminator.statement.the
//                       ^ variable.other.the
//                        ^^ keyword.operator.increment.the
//                           ^ punctuation.definition.block.the
//                             ^^^^^^^ meta.function-call.the
//                                     ^ punctuation.definition.block.the

loop mut i := 0; i < 10; i++ {
// <------------------------------- meta.loop.the
// <---- keyword.control.loop.the
//   ^^^^^^^^^^ meta.var.expr.the
//             ^ punctuation.terminator.statement.the
//               ^ variable.other.the
//                 ^ keyword.operator.relational.the
//                   ^^ constant.numeric.the
//                     ^ punctuation.terminator.statement.the
//                       ^ variable.other.the
//                        ^^ keyword.operator.increment.the
//                           ^ punctuation.definition.block.the
  test(i)
// <--------- meta.loop.the
// <~~------- meta.function-call.the
}
// <- meta.loop.the
// <- punctuation.definition.block.the

loop (mut i := 0; i < 10; i++) {}
// <---------------------------------------- meta.loop.the
// <---- keyword.control.loop.the
//   ^ meta.brace.round.the
//    ^^^^^^^^^^ meta.var.expr.the
//              ^ punctuation.terminator.statement.the
//                ^ variable.other.the
//                  ^ keyword.operator.relational.the
//                    ^^ constant.numeric.the
//                      ^ punctuation.terminator.statement.the
//                        ^ variable.other.the
//                         ^^ keyword.operator.increment.the
//                           ^ meta.brace.round.the
//                             ^ punctuation.definition.block.the

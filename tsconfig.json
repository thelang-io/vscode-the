{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ESNext",
    "outDir": "build",
    "lib": [
      "ESNext"
    ],
    "sourceMap": true,
    "strict": true,
    "rootDir": "src",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}

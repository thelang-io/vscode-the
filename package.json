{
  "name": "the",
  "displayName": "The Programming Language",
  "version": "0.12.0",
  "description": "The Programming Language Support",
  "homepage": "https://the-lang.io/",
  "author": "Aaron Delasy <aaron@thelang.io>",
  "icon": "media/logo-color.png",
  "license": "SEE LICENSE IN LICENSE.txt",
  "main": "build/extension.js",
  "private": true,
  "publisher": "the",
  "repository": "github:thelang-io/vscode-the",
  "activationEvents": [
    "onLanguage:the"
  ],
  "categories": [
    "Programming Languages",
    "Snippets",
    "Linters",
    "Debuggers",
    "Formatters",
    "Testing",
    "Other"
  ],
  "dependencies": {
    "vscode-languageclient": "^8.0.2"
  },
  "devDependencies": {
    "@types/node": "^18.11.18",
    "@types/vscode": "1.30.0",
    "husky": "^8.0.3",
    "ts-standard": "^12.0.2",
    "typescript": "^4.9.4",
    "vsce": "^2.15.0",
    "vscode-tmgrammar-test": "^0.1.1"
  },
  "engines": {
    "vscode": "^1.30.0"
  },
  "galleryBanner": {
    "color": "#FFFFFF",
    "theme": "light"
  },
  "scripts": {
    "build": "tsc",
    "lint": "ts-standard",
    "pack": "vsce package",
    "publish": "vsce publish",
    "test": "npm run test-grammar && npm run lint",
    "test-grammar": "vscode-tmgrammar-test -g syntaxes/the.tmLanguage.json 'test/*'",
    "prepare": "husky install"
  },
  "contributes": {
    "languages": [
      {
        "id": "the",
        "aliases": [
          "The",
          "TheLang",
          "The Lang",
          "The Programming Language"
        ],
        "extensions": [],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "the",
        "scopeName": "source.the",
        "path": "./syntaxes/the.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "the",
        "path": "./snippets/the.json"
      }
    ]
  }
}
